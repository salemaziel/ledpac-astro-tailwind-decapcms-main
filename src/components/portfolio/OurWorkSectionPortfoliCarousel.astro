---
// This is unused
import { Image } from 'astro:assets';

// Import raster images
import costcoImg from '../../assets/images/costco-jewelry-after.jpg';
import finleyImg from '../../assets/images/finley-residence-carousel.jpg';
import airportImg from '../../assets/images/indianapolis-airport-carousel.jpg';
import portfolioItem1 from '../../assets/images/portfolio-item-1.jpg';
import portfolioItem3 from '../../assets/images/portfolio-item-3.jpg';

// Import SVG icons (as paths for use in <img> src)
import carouselLeftIcon from '../../assets/icons/carousel-left.svg';
import carouselRightIcon from '../../assets/icons/carousel-right.svg';

// NOTE: This component contains a carousel structure which requires client-side JavaScript
// for interactivity (slide transitions, button clicks).
// To make this interactive, you would typically:
// 1. Keep this as a React component (.jsx) and use a `client:visible` directive when importing it in a page/layout.
// 2. OR: Re-implement the carousel logic using vanilla JavaScript in a <script> tag within this .astro component.
// The static HTML structure is provided below, focusing on image optimization.

// Define props if needed (none in this example)
// export interface Props {}
// const {} = Astro.props;
---

<section class="py-24 mx-auto ">
  <div class="bg-white bg-no-repeat bg-cover bg-center">
    <div class="container px-4 mx-auto">
      <span class="text-red-500 uppercase">OUR WORK</span>
      <h1 class="text-5xl lg:text-6xl font-heading mb-16 mt-2">
        Discover our recent projects
      </h1>
      <!-- Category Filters - TODO: Add interactivity if needed -->
      <ul class="relative z-10 md:flex md:flex-wrap items-center">
        <li class="flex items-center mb-6 lg:mb-0 md:mr-6 xl:mr-10">
          <a
            class="text-2xl md:text-3xl font-heading text-black hover:text-gray-800"
            href="#"
          >
            All
          </a>
          <span class="flex ml-4 items-center justify-center w-6 h-6 text-xs font-bold rounded-full bg-indigo-100">
            41
          </span>
        </li>
        <li class="flex items-center mb-6 lg:mb-0 md:mr-6 xl:mr-10">
          <a
            class="text-2xl md:text-3xl font-heading text-black hover:text-gray-800"
            href="#"
          >
            Costco
          </a>
          <span class="flex ml-4 items-center justify-center w-6 h-6 text-xs rounded-full bg-indigo-100">
            6
          </span>
        </li>
        <li class="flex items-center mb-6 lg:mb-0 md:mr-6 xl:mr-10">
          <a
            class="text-2xl md:text-3xl font-heading text-red-500"
            href="#"
          >
            Finley Residence
          </a>
          <span class="flex ml-4 items-center justify-center w-6 h-6 text-xs font-bold rounded-full bg-indigo-200 text-white">
            4
          </span>
        </li>
        <!-- Add other list items similarly... -->
      </ul>
    </div>
  </div>

  <!-- Carousel Section -->
  <div class="pt-32 pb-24 bg-white relative overflow-hidden">
    <div class="container px-4 mx-auto relative z-10">
      <!-- Carousel Container - TODO: Add JS for interactivity -->
      <div class="relative max-w-4xl mx-auto mb-12">
        <div class="overflow-hidden">
           <!-- Inner track - TODO: Control transform via JS -->
          <div
            class="flex transition-transform duration-500 ease-in-out -m-5"
            style="transform: translateX(0%);" 
          >
            <!-- Slide 1 -->
            <div class="flex-shrink-0 w-full p-5">
              <Image
                class="mb-12 w-full"
                src={costcoImg}
                alt="Costco jewelry display area after LED lighting upgrade"
                width={costcoImg.width}
                height={costcoImg.height}
                format="webp"
                loading="lazy"
                decoding="async"
              />
              <h2 class="text-4xl font-heading mb-4">Costco Jewelry</h2>
              <p class="text-gray-500 leading-8">
                If you have ever wondered how to develop your brand, this is the
                place for you. Take a big step forward in growing your business
                with this great tool.
              </p>
            </div>
            <!-- Slide 2 -->
            <div class="flex-shrink-0 w-full p-5">
              <Image
                class="mb-12 w-full"
                src={finleyImg}
                alt="Finley Residence exterior with landscape LED lighting"
                width={finleyImg.width}
                height={finleyImg.height}
                format="webp"
                loading="lazy"
                decoding="async"
              />
              <h2 class="text-4xl font-heading mb-4">Finley Residence</h2>
              <p class="text-gray-500 leading-8">
                Unlock the potential of your brand development journey. Discover
                cutting-edge tools to propel your business forward.
              </p>
            </div>
            <!-- Slide 3 -->
            <div class="flex-shrink-0 w-full p-5">
               <Image
                class="mb-12 w-full"
                src={airportImg}
                alt="Indianapolis Airport interior showing architectural LED lighting"
                width={airportImg.width}
                height={airportImg.height}
                format="webp"
                loading="lazy"
                decoding="async"
              />
              <h2 class="text-4xl font-heading mb-4">Indianapolis Airport</h2>
              <p class="text-gray-500 leading-8">
                Embark on a journey of business growth. Explore essential tools
                and strategies to elevate your brand to new heights.
              </p>
            </div>
          </div>
        </div>
        <!-- Carousel Controls - TODO: Add JS event listeners -->
        <div class="flex absolute bottom-40 mb-2 right-0">
          <button class="w-20 h-20 flex items-center justify-center bg-indigo-100 hover:bg-purple-100">
            <!-- Use standard img for SVG icons referenced by import -->
            <img src={carouselLeftIcon.src} alt="Previous Slide" width="24" height="24" />
          </button>
          <button class="w-20 h-20 flex items-center justify-center bg-indigo-200 hover:bg-purple-300">
            <img src={carouselRightIcon.src} alt="Next Slide" width="24" height="24" />
          </button>
        </div>
      </div>

      <!-- Decorative elements -->
      <div class="hidden xl:block absolute -bottom-36 -left-1.5 -ml-24 p-20 bg-pink-50" />
      <div class="hidden xl:block absolute top-0 -right-1.5 -mt-16 -mr-24 p-20 bg-red-100" />
      <Image
        class="hidden xl:block absolute top-0 left-0 mt-10 -ml-28"
        src={portfolioItem1}
        alt="Decorative portfolio image 1"
        width={portfolioItem1.width}
        height={portfolioItem1.height}
        format="webp"
        loading="lazy"
        decoding="async"
        aria-hidden="true"
        style="left: -780px;" 
      />
      <Image
        class="hidden xl:block absolute top-0 right-0 mt-28 -mr-28"
        src={portfolioItem3}
        alt="Decorative portfolio image 3"
        width={portfolioItem3.width}
        height={portfolioItem3.height}
        format="webp"
        loading="lazy"
        decoding="async"
        aria-hidden="true"
        style="right: -780px;"
      />
    </div>
  </div>
</section>
