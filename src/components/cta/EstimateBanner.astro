---
import { Image } from 'astro:assets';

// Import the background image
import backgroundImage from '../../assets/images/airport5.jpg';

// Accept an optional override image from props
const { customBackgroundImage } = Astro.props;

// Use the custom image if provided, otherwise use the default
const finalBackgroundImage = customBackgroundImage || backgroundImage;
---

<div class="relative text-white py-24 px-4 bg-cover bg-center bg-fixed overflow-hidden">
  <!-- Optimized background image using Astro's Image component -->
  <Image
    src={finalBackgroundImage}
    alt="LED lighting installation background"
    class="absolute inset-0 w-full h-full object-cover -z-10"
    loading="lazy"
    format="webp"
    quality={80}
    decoding="async"
  />
  
  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/55 via-black/45 to-black/25 -z-5"></div>
  
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="flex flex-col lg:flex-row items-center justify-between">
      <div class="mb-8 lg:mb-0 lg:w-1/2">
        <h4 class="mb-4 text-2xl font-heading uppercase font-bold [text-shadow:_2px_2px_3px_rgb(0_0_0_/_1)]">
          NEED AN ESTIMATE ON LED LIGHTING?
        </h4>
        <p class="mb-2 font-medium [text-shadow:_2px_2px_3px_rgb(0_0_0_/_1)]">
          For precise estimates specific to your project, contact LEDPac today
        </p>
      </div>
      <div class="lg:w-1/3">
        <a 
          href="/products/#product-form" 
          class="inline-block w-full md:w-auto py-3 px-8 rounded-md text-center text-white font-bold bg-transparent border border-solid border-white hover:bg-white hover:bg-opacity-20 transition duration-200"
        >
          GET AN ESTIMATE
        </a>
      </div>
    </div>
  </div>
</div>
