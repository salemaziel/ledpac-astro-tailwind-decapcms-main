// Import the transitions module to use transition:name directive

---

<section class="bg-white py-24">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="max-w-4xl py-20" transition:name="pageTitle">
      <a href="/" class="text-red-500 hover:underline">
        Home
      </a>
      <h1 class="text-4xl md:text-5xl font-heading font-medium text-darkgray-primary">
        Contact Us
      </h1>
    </div>
    <div class="mb-10">
      <h3 class="mb-4 text-2xl font-heading text-darkgray-primary font-medium">
        GET IN TOUCH
      </h3>
      <p class="mb-2  font-light text-darkgray-primary">
        Please fill out the form below. We will contact you shortly.
      </p>
    </div>
    <div class="flex flex-wrap -mx-4">
      <div class="w-full lg:w-2/3 px-4 mb-8 lg:mb-0">
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
        >
          <input
            type="hidden"
            name="form-name"
            value="contact"
          />
          <p class="hidden">
            <label>
              Don't fill this out if you're human:
              <input name="bot-field" />
            </label>
          </p>
          <div class="mb-6">
            <label class="block mb-2" for="name">
              Name
            </label>
            <input
              class="block rounded-md w-full px-4 py-2 border outline-none bg-[#90909014]"
              type="text"
              name="name"
              placeholder="Your name"
              id="name"
              required
            />
          </div>
          <div class="mb-6">
            <label class="block mb-2" for="email">
              Email
            </label>
            <input
              class="block rounded-md w-full px-4 py-2 border outline-none bg-[#90909014]"
              type="email"
              name="email"
              placeholder="Your email"
              id="email"
              required
            />
          </div>
          <div class="mb-6">
            <label class="block mb-2" for="phone">
              Phone
              <span class="text-sm text-gray-500">(Optional)</span>
            </label>
            <input
              class="block w-full rounded-md px-4 py-2 border outline-none bg-[#90909014]"
              type="tel"
              name="phone"
              placeholder="Your phone number"
              id="phone"
            />
          </div>
          <div class="mb-6">
            <label class="block mb-2" for="message">
              Message
            </label>
            <textarea
              class="block rounded-md w-full px-4 py-2 border outline-none bg-[#90909014]"
              name="message"
              rows="5"
              placeholder="Write your message..."
              id="message"
              required
            ></textarea>
          </div>
          <div class="mt-8">
            <button
              class="inline-block w-full md:w-auto py-3 px-8 text-center text-black font-bold bg-transparent border rounded-md hover:border-green-600 transition duration-300"
              type="submit"
            >
              SUBMIT
            </button>
          </div>
        </form>
      </div>
      <div class="w-full lg:w-1/3 px-4">
        <div class="mb-8 text-center">
          <h4 class="mb-4 text-xl font-heading text-center">
            EMAIL
          </h4>
          <a
            class="text-red-700 hover:text-red-800 text-center underline hover:no-underline"
            href="mailto:info@ledpac.com"
          >
            info@ledpac.com
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
